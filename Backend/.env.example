# MongoDB Atlas Configuration (Cloud Database)
# Sign up at https://cloud.mongodb.com/ to get your connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_CONNECTION_STRING=mongodb+srv://your_username:your_password@your-cluster.xxxxx.mongodb.net/smart_food_db?retryWrites=true&w=majority&tlsAllowInvalidCertificates=true

# Note: Remove tlsAllowInvalidCertificates=true in production
# For local MongoDB (alternative): mongodb://localhost:27017/smart_food_db

# Supabase Configuration
SUPABASE_JWT_SECRET=your_jwt_secret_here

# VietMap API Configuration
# Get API key from https://vietmap.vn/
VIETMAP_API_KEY=your_vietmap_key_here

# Application Configuration
DEBUG=True
